{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "pub_": ["src/hooks/public.js"],
      "com/*": ["src/components/*"],
      "con/*": ["src/containers/*"],
      "hooks/*": ["src/hooks/*"],
      "tools/*": ["src/tools/*"],
      "assets/*": ["src/assets/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
